<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap 
PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Employee">
	<resultMap class="myspace.ad.rnd.ibatis.main.Employee"
		id="resultEmployee" xmlName="resultEmployee">
		<result property="id" column="id" />
		<result property="first_name" column="first_name" />
		<result property="last_name" column="last_name" />
		<result property="salary" column="salary" />
	</resultMap>

	<!-- Insert Statement -->
	<insert id="insert" parameterClass="myspace.ad.rnd.ibatis.main.Employee">

		INSERT INTO
		EMPLOYEE(first_name, last_name, salary)
		VALUES (#first_name#,
		#last_name#, #salary#)

	</insert>

	<!-- Select Statement -->
	<select id="select" resultMap="resultEmployee" parameterClass="String">
		SELECT * FROM EMPLOYEE WHERE
		first_name LIKE #findWithFirstNameAs#
	</select>
</sqlMap>